node type camera_node_type {
    publishes to /camera/image_raw: sensor_msgs/msg/Image;
    subscribes to /camera/info: sensor_msgs/msg/CameraInfo;
    provides service /camera/set_exposure: my_pkg/srv/SetExposure;
    uses service /camera/get_info: my_pkg/srv/GetInfo;
}

system {
    node instance main_camera: camera_node_type {
        # parameters could go here, we ignore them
    }
}